<h1>Customers</h1>

<ul>
<% @customers.each do |customer| %>
  <li><%= customer.name %></li>
  <a href="/customers/<%= customer.id %>">Show More</a>
<% end %>
</ul>



 <form method="post" action="/customers">
   <label for="name-field">Name:</label>
   <input
   type="text"
   name="name"
   id="name-field"
   />

   <input type="submit" value = "Add new customer">
   </form>
